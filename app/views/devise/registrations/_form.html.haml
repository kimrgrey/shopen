= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal' } do |f|
  .row
    .span6
      = form_fieldset_header t('.account_info_title'), t('.account_info_description')
      %fieldset
        = f.input :email, input_html: {class: 'input-xlarge'}
        = f.input :password, input_html: {class: 'input-xlarge'}
        = f.input :password_confirmation, input_html: {class: 'input-xlarge'}  
      = form_fieldset_header t('.personal_details_title'), t('.personal_details_description')
      %fieldset
        = f.input :first_name, input_html: {class: 'input-xlarge'}
        = f.input :last_name, input_html: {class: 'input-xlarge'}
    .span6
      %img{src: image_path('product1.jpg')}
  .row.form-actions
    = f.button :submit, t('.submit'), class: 'btn btn-success'